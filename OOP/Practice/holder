
        document.addEventListener('DOMContentLoaded', function () {
            itemModal.addEventListener('click', function () {
                modalContainer.style.display = 'flex';
            });

            itemModal.addEventListener('click', function () {
                modalContainer.style.display = 'none';
            });
        });

